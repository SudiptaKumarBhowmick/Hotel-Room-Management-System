@model IEnumerable<HotelRoomManagementSystem.Models.AllGuestInfo>

@{
    ViewBag.Title = "GuestList";
}
<body>
    <h2>Guest List</h2>
    @using (Html.BeginForm("GuestList", "User", FormMethod.Get))
    {
        <b>Search By: </b><br />
        <text>Name: </text> @Html.TextBox("SearchByName") <br /> 
        <text>City: </text> @Html.TextBox("SearchByCity")<input type="submit" value="search" class="btn btn-primary" />
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Guest_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest_addr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest_phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_No)
            </th>
            <th>
                @Html.Label("Check In or out")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Guest_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Guest_addr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Guest_phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room_No)
                </td>
                <td>
                    @if (item.IsBooked)
                    {
                        @Html.Label("Check In")
                    }
                    else
                    {
                        @Html.Label("Check Out")
                    }
                </td>
            </tr>
        }

    </table>
</body>