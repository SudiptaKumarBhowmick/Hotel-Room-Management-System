@model IEnumerable<HotelRoomManagementSystem.Models.User>

@{
    ViewBag.Title = "UserList";
}

@{
    var message = TempData["AlertMessage"] ?? string.Empty;
}

<script type="text/javascript">
 var message = '@message';

    if (message) {
        alert(message);
    }

</script>

<h2>User List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                <p class="btn btn-success">
                    <i class="fa fa-info-circle"></i><a href="@Url.Action("UserDetails","UserListForAdmin", new { id = item.User_ID })" style="color:black">User Account Details</a>
                </p>
                <p class="btn btn-danger">
                    <i class="fa fa-trash"></i><a href="@Url.Action("DeleteUserAccount","UserListForAdmin", new { id = item.User_ID })" style="color:black">Close User Account</a>
                </p>
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to Home", "Index", "Admin") |
    @Html.ActionLink("Back to Dashboard", "Index")
</div>
